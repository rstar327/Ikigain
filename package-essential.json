{
  "name": "ikigai-compass",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:server && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/index.js --external:pg-native",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "express": "^4.21.2",
    "wouter": "^3.3.5",
    "drizzle-orm": "^0.39.1",
    "zod": "^3.24.1",
    "@neondatabase/serverless": "^0.10.4",
    "stripe": "^17.4.0",
    "express-session": "^1.18.1",
    "connect-pg-simple": "^9.0.0",
    "pg": "^8.13.1",
    "memorystore": "^1.6.6",
    "openid-client": "^5.7.0",
    "passport": "^0.7.0",
    "@sendgrid/mail": "^8.1.5",
    "multer": "^1.4.5-lts.1",
    "memoizee": "^0.4.17"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/pg": "^8.11.10",
    "@types/multer": "^2.0.0",
    "@types/memoizee": "^0.4.12",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vite": "^5.4.10"
  }
}